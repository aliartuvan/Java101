import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        int sayi,a,total = 0;
        boolean deger = true;

        Scanner input= new Scanner(System.in);
        System.out.print("Basamakları toplamı hesaplanacak sayı: ");

        sayi= input.nextInt();

        a = sayi;

        while (sayi != 0) {
            a =sayi;
            while (deger) {
                a =a%10;
                total=  total + a;
                deger = false;
            }
            deger = true;
            sayi =  sayi/10;

        }
        System.out.println("Sayının basamakları toplamı: " + total);
    }
}
